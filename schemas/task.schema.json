{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "type": "object",
  "required": ["goal", "status", "steps", "artifacts", "memory"],
  "properties": {
    "goal": {
      "type": "string",
      "description": "The main objective of this task"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "running", "completed", "failed"],
      "description": "Current status of the task"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "tool", "input", "status"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "tool": { "type": "string" },
          "input": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "running", "done", "failed"]
          },
          "output": { "type": ["string", "null"] },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "sources": { "type": "string" },
        "report": { "type": "string" }
      }
    },
    "memory": {
      "type": "object",
      "properties": {
        "keywords_tried": {
          "type": "array",
          "items": { "type": "string" }
        },
        "failed_attempts": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
